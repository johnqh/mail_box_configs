{
  "name": "@sudobility/configs",
  "version": "0.0.5",
  "description": "Configuration utilities and RPC helpers for the 0xmail.box Web3 email ecosystem",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json && npm run build:cjs-rename",
    "build:cjs-rename": "find dist -name '*.js' -not -name '*.cjs' -exec sh -c 'cp \"$1\" \"${1%.js}.cjs\"' _ {} \\;",
    "clean": "rimraf dist",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "typecheck": "tsc --noEmit",
    "verify": "npm run typecheck && npm run lint && npm run test && npm run build",
    "prepublishOnly": "npm run clean && npm run verify"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "keywords": [
    "typescript",
    "config",
    "rpc",
    "blockchain",
    "0xmail",
    "web3",
    "email"
  ],
  "author": "0xmail.box",
  "license": "MIT",
  "peerDependencies": {
    "@sudobility/types": "^1.8.29"
  },
  "devDependencies": {
    "@sudobility/types": "^1.8.29",
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "prettier": "^3.0.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
